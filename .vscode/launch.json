{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run pipeline (source) - debug_work",
      "type": "python",
      "request": "launch",
      "python": "${workspaceFolder}/.venv/bin/python",
      "program": "${workspaceFolder}/sunday-photos/run.py",
      "console": "integratedTerminal",
      "redirectOutput": false,
      "internalConsoleOptions": "neverOpen",
      "logToFile": true,
      "cwd": "${workspaceFolder}/sunday-photos",
      "env": {
        "GUIDE_FORCE_AUTO": "1",
        "DEBUGPY_LOG_DIR": "${workspaceFolder}/logs/debugpy",
        "SUNDAY_PHOTOS_FORCE_ANIMATION": "1",
        "SUNDAY_PHOTOS_FORCE_COLOR": "1",
        "PYTHONUNBUFFERED": "1"
      },
      "args": [
        "--input-dir",
        "${workspaceFolder}/sunday-photos/.debug_work/input",
        "--output-dir",
        "${workspaceFolder}/sunday-photos/.debug_work/output"
      ]
    },
    {
      "name": "Check env (source) - run.py --check-env",
      "type": "python",
      "request": "launch",
      "python": "${workspaceFolder}/.venv/bin/python",
      "program": "${workspaceFolder}/sunday-photos/run.py",
      "console": "integratedTerminal",
      "redirectOutput": false,
      "internalConsoleOptions": "neverOpen",
      "logToFile": true,
      "cwd": "${workspaceFolder}/sunday-photos",
      "env": {
        "GUIDE_FORCE_AUTO": "1",
        "DEBUGPY_LOG_DIR": "${workspaceFolder}/logs/debugpy",
        "SUNDAY_PHOTOS_FORCE_ANIMATION": "1",
        "SUNDAY_PHOTOS_FORCE_COLOR": "1",
        "PYTHONUNBUFFERED": "1"
      },
      "args": [
        "--check-env"
      ]
    },
    {
      "name": "Debug teacher console entry (console_launcher.py)",
      "type": "python",
      "request": "launch",
      "python": "${workspaceFolder}/.venv/bin/python",
      "program": "${workspaceFolder}/sunday-photos/src/cli/console_launcher.py",
      "console": "integratedTerminal",
      "redirectOutput": false,
      "internalConsoleOptions": "neverOpen",
      "logToFile": true,
      "cwd": "${workspaceFolder}/sunday-photos",
      "env": {
        "GUIDE_FORCE_AUTO": "1",
        "DEBUGPY_LOG_DIR": "${workspaceFolder}/logs/debugpy",
        "SUNDAY_PHOTOS_WORK_DIR": "${workspaceFolder}/sunday-photos/.debug_work",
        "SUNDAY_PHOTOS_FORCE_ANIMATION": "1",
        "SUNDAY_PHOTOS_FORCE_COLOR": "1",
        "PYTHONUNBUFFERED": "1"
      }
    }
  ]
}
